<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="items"
            type="mohit.android.assignment.kotlin.model.Country" />

        <!--     <variable
                 name="AppDataConfig"
                 type="com.liquetag.tableconnect.utils.AppDataConfig" />-->
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp">

            <TextView
                android:id="@+id/sdvProfileImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@{items.name}"
                android:textColor="@color/color_black"
                app:layout_constraintEnd_toStartOf="@id/tvRegion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvRegion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@{items.region}"
                android:textAlignment="center"
                android:textColor="@color/color_black"
                app:layout_constraintBottom_toBottomOf="@id/sdvProfileImage"
                app:layout_constraintEnd_toStartOf="@id/tvRegionCode"
                app:layout_constraintStart_toEndOf="@id/sdvProfileImage"
                app:layout_constraintTop_toTopOf="@id/sdvProfileImage" />

            <TextView
                android:id="@+id/tvRegionCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@{items.code}"
                android:textAlignment="center"
                android:textColor="@color/color_black"
                app:layout_constraintBottom_toBottomOf="@id/sdvProfileImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvRegion"
                app:layout_constraintTop_toTopOf="@id/sdvProfileImage" />

            <TextView
                android:id="@+id/tvSpace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/sdvProfileImage"
                app:layout_constraintTop_toBottomOf="@id/sdvProfileImage" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@{items.capital}"
                android:textColor="@color/color_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/sdvProfileImage"
                app:layout_constraintTop_toBottomOf="@id/tvSpace" />

            <View
                android:id="@+id/vDivider"
                android:layout_width="2dp"
                android:layout_height="0dp"

                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>